import os, re
Import('env')


Import('mu2e_helper')

helper=mu2e_helper()

mainlib = helper.make_mainlib ( [
    'art_Framework_Core',
    'art_Framework_IO_ProductMix',
    'mu2e_GlobalConstantsService_GlobalConstantsService_service',
    'mu2e_MCDataProducts',
    'mu2e_RecoDataProducts',
    'mu2e_GeneralUtilities',
    ] )

helper.make_plugins( [
    mainlib,
    'art_Framework_IO_ProductMix',
    'mu2e_GlobalConstantsService_GlobalConstantsService_service',
    'mu2e_MCDataProducts',
    'mu2e_RecoDataProducts',
    'mu2e_GeneralUtilities',
    ] )

helper.make_dict_and_map( [
    mainlib,
    ] )


