#!/usr/bin/env python
#
# Script to build the files found in this directory.
#
# $ Id: SConscript,v 1.7 2012/08/24 20:19:31 gandr Exp $
# $ Author: gandr $
# $ Date: 2012/08/24 20:19:31 $
#
# Original author Rob Kutschke.
#

import os
Import('env')
Import('mu2e_helper')

helper=mu2e_helper();

env.Append(FORTRANFLAGS = '-fno-automatic -finit-local-zero -fcheck=bounds' )
do_fortran=True

mainlib = helper.make_mainlib ( [ 'art_Framework_Core',
                                  'art_Framework_Services_Optional_RandomNumberGenerator_service',
                                  'art_Framework_Services_Optional_TFileService_service',
                                  'mu2e_GeometryService',
                                  'mu2e_ConditionsService',
                                  'mu2e_ExtinctionMonitorFNAL_Geometry',
                                  'mu2e_SeedService_SeedService_service',
                                  'mu2e_Mu2eUtilities',
                                  'mu2e_ExtinctionMonitorFNAL_Utilities',
                                  'mu2e_Sources',          # FIXME: utils should not be in Sources
                                  'mu2e_ConfigTools',
                                  'mu2e_MCDataProducts',
                                  'CLHEP',
                                ], [],[],
                                do_fortran )

helper.make_plugins( [ mainlib,
                       'art_Framework_Core',
                       'art_Framework_Services_Optional_RandomNumberGenerator_service',
                       'art_Framework_Services_Optional_TFileService_service',
                       'mu2e_GeometryService',
                       'mu2e_ConditionsService',
                       'mu2e_SeedService_SeedService_service',
                       'mu2e_MCDataProducts',
                       'mu2e_ConfigTools',
                       'CLHEP',
                     ] )

helper.make_dict_and_map( [ mainlib,
                          ] )

# This tells emacs to view this file in python mode.
# Local Variables:
# mode:python
# End:
