#! /bin/bash
#
# Script to clean up a satellite release so that it can be pointed at a new base release.
#
# If scons is not run abort the script to avoid a cross-stitched build.
#

set -e

source "$(dirname $0)/satelliteFuncs"

ensure_mu2e_environment

scons_clean

# Remove the files managed by the satellite release mechanism
for stuff in  ${satellite_managed_files}; do
  if [ -e ${stuff} ];then
    rm -r -i ${stuff}
  fi
done
