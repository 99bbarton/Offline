  {
     ReadKalFits :
    {
      module_type    : ReadKalFits
      fitterModuleLabel : TrkRecFit
# MC truth finder, analyzer configuration
                        KalFitMC : 
                        {
                        }
    }
  }


  p1 : [ TimePeakFinder, RobustHelixFinder, TrkRecFit ] #, TrkPatRec2 #tprDem
  e1 : [ outfile, ReadKalFits ]

  trigger_paths  : [p1]
