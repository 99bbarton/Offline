#include "minimalMessageService.fcl"
#include "standardProducers.fcl"

# Give this job a name.
process_name : TrkPatRec02

source :
{
  module_type : EmptyEvent
  maxEvents : 100
}

services :
{
  message : @local::default_message

  TFileService : { fileName : "TrkPatRecTest02.root" }
  RandomNumberGenerator : { }

  user :
  {
    GeometryService : { inputFile : "Mu2eG4/test/geom_01.txt" }

    ConditionsService : { conditionsfile : "Mu2eG4/test/conditions_01.txt" }

    G4Helper : { }
  }

}

physics :
{
  producers :
  {
    # Generate the event
    generate: @local::generate

    # Run G4 and add hits to the event
    g4run : @local::g4run

    # Form StrawHits (SH).
    makeSH : @local::makeSH

  }
    # test module for Kalman fit: the 
  analyzers : 
  {
    TrkPatRecTest :
    {
        module_type    : TrkPatRecTest
        tbin            : 20
        diagLevel      : 1
		RMax_tight			: 630
		RMax_loose			: 650
		RMin_tight			: 410
		RMin_loose			: 390
		EDep_tight			: 0.0045
		EDep_loose			: 0.005
		DtMax				: 45.0
		MinNHits            : 10
        MCHelix         : false
    # Helix fit configuration
        HelixFit : 
        {
            diagLevel       : 2
            minNHit         : 10
            minDelta        : 5000
            rfactor         : 1.0
            lambda0         : 1
            lstep           : 0.2
            minlambda       : 0.1
            nsigma          : 10.0
            minzsep         : 200
            maxzsep         : 700
        }

    # Kalman fit configuration for the helix seed fit
         SeedFit : 
        {
            maxiter        : 5
            debugLevel     : 0
            material       : false
            hiterr          : 2.5
            seedsmear       : 10000
            weedhits        : true
            updateT0        : false
            ambigflip       : true
        }
    # Kalman fit configuration for the final track fit
         KalFit : 
        {
            maxiter        : 5
            debugLevel     : 0
            material       : true
            hiterr          : 0.1
            seedsmear       : 100000
            weedhits        : true
        }
        
    # MC truth finder, analyzer configuration
        KalFitMC : 
        {
            mcT0Err       : -0.5
            debugLevel     : 0
            minNHits       : 15
            maxNHits       : 500
        }        
    }
  }


  p1 : [generate , g4run, makeSH ]
  e1 : [TrkPatRecTest ]

  trigger_paths  : [p1]
  end_paths      : [e1]

}
physics.producers.generate.inputfile  : "Mu2eG4/test/genconfig_01.txt"
physics.producers.makeSH.diagLevel    : 0
physics.producers.makeSH.maxFullPrint : 5

