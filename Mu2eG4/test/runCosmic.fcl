# Configuration file for runCosmic.py
#  - Generate N cosmic events (no other processes)
#  - Run these through G4.
#  - No event display.
#  - Write event data to an output file
#  - Save state of random numbers to the event-data output file
#
# $Id: runCosmic.fcl,v 1.1 2011/05/18 16:37:38 onoratog Exp $
# $Author: onoratog $
# $Date: 2011/05/18 16:37:38 $

#include "minimalMessageService.fcl"

# Give this job a name.
process : RunCosmic

# Start form an empty source
source :
{
  module_type : EmptyEvent
  maxEvents : 200
}

services :
{
  message : @local::default_message

  TFileService :
  {
    fileName : "cosmic/cosmic.root"
  }

  RandomNumberGeneratorService : { }

# Uncomment to enable memory use profiling
# SimpleMemoryCheck :
# {
#   oncePerEventMode : false
#   showMallocInfo   : false
#   ignoreTotal      : 5
#)

  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/geom_cosmic.txt"
    }

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }

    G4Helper : { }

# Uncomment to enable per module timing
#   Timing :
#   {
#    useJobReport : true
#   }

  }

}

physics :
{
  producers:
  {

    # Generate Event
    generate:
    {
      module_type   : EventGenerator
      inputfile     : "Mu2eG4/test/cosmicconfig_01.txt"
    }

    # Run G4 and add hits to the event
    g4run :
    {
      module_type          : G4
      generatorModuleLabel : generate
      seed                 : [9877]
    }

    # Form StrawHits (SH).
    makeSH :
    {
      module_type          : MakeStrawHit
      g4ModuleLabel        : g4run
      seed                 : [7790]
      diagLevel            : 0
      maxFullPrint         : 5
    }

    # Form CaloHits (APD hits)
    CaloReadoutHitsMaker :
    {
      module_type          : MakeCaloReadoutHits
      diagLevel            : 0
      maxFullPrint         : 201
      g4ModuleLabel        : g4run
    }

    # Form CaloCrystalHits (reconstruct crystals from APDs)
    CaloCrystalHitsMaker :
    {
      module_type          : MakeCaloCrystalHits
      diagLevel            : 0
      maxFullPrint         : 201
      g4ModuleLabel        : g4run
      minimumEnergy        : 0.0
      maximumEnergy        : 1000.0
      minimumTimeGap       : 100.0
    }
  }


  filters:
  {

    checkhits:
    {
      module_type          : CosmicTuple
      g4ModuleLabel        : g4run
      minumumEnergy        : 0.001      
      traverseZ            : 1500.
      minimump             : 103.
      maximump             : 107. 
      pdgidnumber          : 11
    }

  }

  analyzers:
  {
    randomsaver:
    {
      module_type          : RandomSaverNumber
    }
  }

  p1 : [generate , g4run , makeSH, CaloReadoutHitsMaker, CaloCryHitsMaker, checkhits ]
  e1 : [randomsaver, outfile]

  trigger_paths  : [p1]
  end_paths      : [e1]

}

outputs:
{

  outfile :
  {
    module_type   :   RootOutput
    filename      :   "data_cosmic.root"
    outputCommands:   [ "keep *_*_*_*"
                        "drop mu2eSimParticles_*_*_*" # Uncomment this line to reduce file size.
                      ]
  }

}

