# Configuration file for Readback
#
# Readback the output of g4test_03.py; make histograms and printout.
#
# $Id: readback.fcl,v 1.5 2011/05/25 01:23:42 kutschke Exp $
# $Author: kutschke $
# $Date: 2011/05/25 01:23:42 $

#include "diagnostics.fcl"
#include "minimalMessageService.fcl"
#include "standardProducers.fcl"

# Give this job a name.  
process_name : ReadBack01

# Start form an empty source
source : 
{ 
  module_type : RootInput
  fileNames   : [ "data_03.root" ]
  maxEvents : -1
}

services : 
{
  message : @local::default_message 

  TFileService : 
  {
    fileName : "readback.root"
  }

  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/geom_01.txt"
    }  

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }

  }

}

physics :
{
  producers:
  {  }


  analyzers:
  {

    checkhits:
    {
      module_type          : ReadBack
      generatorModuleLabel : generate
      g4ModuleLabel        : g4run
      minimumEnergy        : 0.000
      maxFullPrint         : 201
    }

  } 

  e1 : [checkhits]

  end_paths      : [e1]

}

