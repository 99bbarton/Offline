# Configuration file for studying pi->e nu at rest as a calibration line.
#
# $Id: pi_e_nu.fcl,v 1.3 2011/05/19 02:36:09 onoratog Exp $
# $Author: onoratog $
# $Date: 2011/05/19 02:36:09 $

#include "minimalMessageService.fcl"
#include "standardProducer.fcl"

# Give this job a name.
process_name : PiENu01

# Start form an empty source
source :
{
  module_type : EmptyEvent
  maxEvents : 200
}

services :
{
  message : @local::default_message

  TFileService :
  {
    fileName : "pi_e_nu_01.root"
  }

  RandomNumberGeneratorService : { }

  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/pi_e_nu_geom.txt"
    }

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }

    G4Helper : { }

  }

}

physics :
{
  producers:
  {

    # Generate Event
    readfile:
    {
      module_type   : EventGenerator
      inputfile     : "Mu2eG4/test/pi_e_nu_genconfig.txt"
      seed          : [7789]
    }

    decay:
    {
      module_type        : EplusFromStoppedPion
      inputModuleLabel   : readfile
      czmin              : -1.
      czmax              : +1.
      seed               : [1234]
    }
    
    # Run G4 and add hits to the event
    g4run :
    {
      module_type          : G4
      generatorModuleLabel : decay
      seed                 : [9877]
    }

    # Form StrawHits (SH).
    makeSH : @local::makeSH

    # Form CaloHits (APD hits)
    CaloReadoutHitsMaker : @local::CaloReadoutHitsMaker

    # Form CaloCrystalHits (reconstruct crystals from APDs)
    CaloCrystalHitsMaker : @local::CaloCrystalHitsMaker

  }


  analyzers:
  {

    checkhits:
    {
      module_type          : ReadBack
      generatorModuleLabel : decay
      g4ModuleLabel        : g4run
      diagLevel            : 0
      minumumEnergy        : 0.000
      maxFullPrint         : 201
    }

    readStrawHits:
    {
      module_type          : ReadStrawHit
      makerMduleLabel      : makeStrawHits
      diagLevel            : 3
      maxFullPrint         : 100
    }

    randomsaver:
    {
      module_type          : RandomSaverNumber
    }

  }

  p1 : [readfile , decay , g4run , makeSH, CaloReadoutHitsMaker, CaloCryHitsMaker ]
  e1 : [randomsaver, checkhits, readStrawHits, outfile]

  trigger_paths  : [p1]
  end_paths      : [e1]

}

outputs:
{

  outfile :
  {
    module_type   :   RootOutput
    filename      :   "data_pi_e_nu_01.root"
    outputCommands:   [ "keep *_*_*_*"
                        "drop mu2ePointTrajectoryMapVector"
#                       "drop mu2eSimParticles_*_*_*" # Uncomment this line to reduce file size.
                      ]
  }

}

