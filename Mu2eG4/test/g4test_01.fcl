#
# Generate a single conversion electron, run it through G4
# and draw a picture in the (x,y) view.  Do only one event.
#
# $Id: g4test_01.fcl,v 1.8 2011/05/26 19:21:50 onoratog Exp $
# $Author: onoratog $
# $Date: 2011/05/26 19:21:50 $

#include "minimalMessageService.fcl"
#include "standardProducers.fcl"


# Give this job a name.
process_name : G4Test01

# Start form an empty source
source :
{
  module_type : EmptyEvent
  maxEvents : 1
}

services :
{
  message : @local::default_message

  TFileService :
  {
    fileName : "g4test_01.root"
  }


  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/geom_01_LowDetailGraphics.txt"
    }

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }

    RandomNumberGenerator : { }

    G4Helper : { }

  }

}

physics :
{
  producers:
  {

    # Generate Event
    generate:
    {
      module_type   : EventGenerator
      inputfile     : "Mu2eG4/test/genconfig_01.txt"
    }

    # Run G4 and add hits to the event
    g4run :
    {
      module_type          : G4
      generatorModuleLabel : generate
      visMacro             : "Mu2eG4/test/visxy.mac"
      seed                 : [9877]
    }

  }

  p1 : [generate, g4run  ]


  trigger_paths  : [p1]

}


