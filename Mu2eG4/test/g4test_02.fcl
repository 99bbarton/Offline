# Configuration file for G4Test02
#
#  - Generate 10 events including one conversion electron plus
#    some number of background processes.
#  - Run these through G4.
#  - Event display with yz view.
#
# $Id: g4test_02.fcl,v 1.13 2013/07/01 20:46:10 gandr Exp $
# $Author: gandr $
# $Date: 2013/07/01 20:46:10 $

#include "minimalMessageService.fcl"
#include "standardProducers.fcl"
#include "standardServices.fcl"

# Give this job a name.
process_name : G4Test02

# Start from empty events.
source : {
  module_type : EmptyEvent
  maxEvents : 10
}

services : {
  message               : @local::default_message
  TFileService          : { fileName : "g4test_02.root" }
  RandomNumberGenerator : {}

  user : {
    GeometryService   : { inputFile      : "Mu2eG4/test/geom_01_LowDetailGraphics.txt" }
    ConditionsService : { conditionsfile : "Mu2eG4/test/conditions_01.txt" }
    GlobalConstantsService : { inputFile : "Mu2eG4/test/globalConstants_01.txt" }
    G4Helper          : { }
    SeedService       : @local::automaticSeeds
  }

}

physics : {

  producers: {

    # Generate Event
    generate: @local::generate

    # Run G4 and add its output to the event.
    g4run : @local::g4run

  }

  p1 : [generate , g4run ]

  trigger_paths  : [p1]

}

// Initialze seeding of random engines: do not put these lines in base .fcl files for grid jobs.
services.user.SeedService.baseSeed         :  0
services.user.SeedService.maxUniqueEngines :  20

// Enable G4 graphics with the yz view.
physics.producers.g4run.visMacro : "Mu2eG4/test/visyz.mac"

// Print out sim particles
physics.producers.g4run.SimParticlePrinter : {
   enabled : true
   primariesOnly : true
   prefix : "Primary:"
}
