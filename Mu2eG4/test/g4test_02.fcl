# Configuration file for G4Test02
#
#  - Generate 10 events including one conversion electron plus
#    some number of background processes.
#  - Run these through G4.
#  - Event display with yz view.
#
# $Id: g4test_02.fcl,v 1.5 2011/05/19 02:36:09 onoratog Exp $
# $Author: onoratog $
# $Date: 2011/05/19 02:36:09 $

#include "minimalMessageService.fcl"
#include "standardProducer.fcl"

# Give this job a name.
process_name : G4Test02

# Start form an empty source
source :
{
  module_type : EmptyEvent
  maxEvents : 10
}

services :
{
  message : @local::default_message

  TFileService :
  {
    fileName : "g4test_02.root"
  }

  RandomNumberGeneratorService : { }

  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/geom_01_LowDetailGraphics.txt"
    }

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }

    G4Helper : { }

  }

}

physics :
{
  producers:
  {

    # Generate Event
    generate:
    {
      module_type   : EventGenerator
      inputfile     : "Mu2eG4/test/genconfig_02.txt"
    }

    # Run G4 and add hits to the event
    g4run :
    {
      module_type          : G4
      generatorModuleLabel : generate
      visMacro             : "Mu2eG4/test/visyz.mac"
      seed                 : [9877]
    }

  }


  analyzers:
  {

    checkhits:
    {
      module_type          : ReadBack
      generatorModuleLabel : generate
      g4ModuleLabel        : g4run
      minumumEnergy        : 0.001
      maxFullPrint         : 5
    }

  }

  p1 : [generate , g4run ]
  e1 : [checkhits]

  trigger_paths  : [p1]
  end_paths      : [e1]

}


