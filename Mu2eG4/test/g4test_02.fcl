# Configuration file for G4Test02
#
#  - Generate 10 events including one conversion electron plus
#    some number of background processes.
#  - Run these through G4.
#  - Event display with yz view.
#
# $Id: g4test_02.fcl,v 1.10 2012/02/08 16:57:36 kutschke Exp $
# $Author: kutschke $
# $Date: 2012/02/08 16:57:36 $

#include "minimalMessageService.fcl"
#include "standardProducers.fcl"
#include "standardServices.fcl"

# Give this job a name.
process_name : G4Test02

# Start from empty events.
source : {
  module_type : EmptyEvent
  maxEvents : 10
}

services : {
  message               : @local::default_message
  TFileService          : { fileName : "g4test_02.root" }
  RandomNumberGenerator : {}

  user : {
    GeometryService   : { inputFile      : "Mu2eG4/test/geom_01_LowDetailGraphics.txt" }
    ConditionsService : { conditionsfile : "Mu2eG4/test/conditions_01.txt" }
    G4Helper          : { }
    SeedService       : @local::automaticSeeds
  }

}

physics : {

  producers: {

    # Generate Event
    generate: {
      module_type   : EventGenerator
      inputfile     : "Mu2eG4/test/genconfig_02.txt"
    }

    # Run G4 and add its output to the event.
    g4run : {
      module_type          : G4
      generatorModuleLabel : generate
      visMacro             : "Mu2eG4/test/visyz.mac"
    }

  }

  p1 : [generate , g4run ]

  trigger_paths  : [p1]

}
