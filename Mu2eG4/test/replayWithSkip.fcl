# Same as replayAll.py, except skip the first 10 events.
#
# $Id: replayWithSkip.fcl,v 1.1 2011/05/18 16:37:38 onoratog Exp $
# $Author: onoratog $
# $Date: 2011/05/18 16:37:38 $

#include "minimalMessageService.fcl"

# Give this job a name.
process : replayAll

# Start form an empty source
source :
{
  module_type : RootInput
  fileNames   : "drop_03.root"
  maxEvents   : -1
  skipEvents  : 10
}

services :
{
  message : @local::default_message

  TFileService :
  {
    fileName : "replayWithSkip.root"
  }

  RandomNumberGeneratorService : 
  {
    restoreStateLabel :  randomsaver 
  }

  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/geom_01"
    }

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }

    G4Helper : { }

  }

}

physics :
{
  producers:
  {

    # Generate Event
    generate:
    {
      module_type   : EventGenerator
      inputfile     : "Mu2eG4/test/genconfig_02.txt"
    }

    # Run G4 and add hits to the event
    g4run :
    {
      module_type          : G4
      generatorModuleLabel : generate
    }

  }


  analyzers:
  {

    checkhits2:
    {
      module_type          : ReadBack
      generatorModuleLabel : generate
      g4ModuleLabel        : g4run
      minumumEnergy        : 0.000
      maxFullPrint         : 201
    }

  }

  p1 : [generate , g4run ]
  e1 : [checkhits, outfile]

  trigger_paths  : [p1]
  end_paths      : [e1]

}

outputs:
{

  outfile :
  {
    module_type   :   RootOutput
    filename      :   "replayWithSkipData.root"
    fastCloning   :   false
  }

}

