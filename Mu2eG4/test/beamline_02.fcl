#include "minimalMessageService.fcl"

# Give this job a name.
process : Beamline02

# Start from an empty event
source :
{
  module_type : EmptyEvent
  maxEvents : 2000
}

services :
{
  message : @local::default_message

  TFileService :
  {
    fileName : "beamline_02.root"
  }

  RandomNumberGeneratorService : { }

  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/beamline_geom.txt"
    }

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }

    G4Helper : { }

  }

}

physics :
{
  producers:
  {

    # Generate Event
    generate:
    {
      module_type   : EventGenerator
      inputfile     : "Mu2eG4/test/beamline_genconfig.txt"
      seed          : [7789]
    }

    # Use this generator instead of the one above if using G4Beamline input files
#   generate:
#   {
#     module_type   : G4BeamlineGenerator
#     inputfile     : "Mu2eG4/test/beamline_genconfig.txt"
#     seed          : [7789]
#   }

    # Run G4 and add hits to the event
    g4run :
    {
      module_type          : G4
      generatorModuleLabel : generate
      seed                 : [9877]
    }

  }

  analyzers:
  {
    # Look at the hits from virtualdetectors
    readvd::
    {
      module_type      : ReadVirtualDetector
      vdStepPoints     : virtualdetector
      savePDG          : [13 , -211]
      maxPrint         : 200
    }

    # Look at the hits from G4
    checkhits:
    {
      module_type         : ReadBack
      generatorModulLabel : generate
      g4ModuleLabel       : g4run
      minimumEnergy       : 0.00
      maxFullPrint        : 201
    }

    # Save state of random numbers to the event
    randomsaver:
    {
      module_type        : RandomNumberSaver
    }
  }

  p1 : [generate , g4run ]
  e1 : [checkhits, readvd , randomsaver, outfile ]


  trigger_paths  : [p1]
  end_paths      : [e1]

}

outputs:
{

  outfile :
  {
    module_type   :   RootOutput
    filename      :   "beamlineData_02.root"
    outputCommands:   [ "keep *_*_*_*"
#                       "drop mu2eSimParticles_*_*_*" # Uncomment this line to reduce file size.
                      ]
  }

}


