# Configuration file to replay the output of g4test_03 using
# the random number state saved in the event.  The output
# event contains both sets of data products, those created in
# the first run and those created in the second run.
#
# $Id: replayAll.fcl,v 1.5 2011/05/26 19:21:50 onoratog Exp $
# $Author: onoratog $
# $Date: 2011/05/26 19:21:50 $

#include "minimalMessageService.fcl"
#include "standardProducers.fcl"

# Give this job a name.
process_name : replayAll

# Start form an empty source
source :
{
  module_type : RootInput
  fileNames   : "drop_03.root"
  maxEvents   : -1
}

services :
{
  message : @local::default_message

  TFileService :
  {
    fileName : "replayAll.root"
  }

  RandomNumberGeneratorService : 
  {
    restoreStateLabel :  randomsaver 
  }

  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/geom_01"
    }

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }

    G4Helper : { }

  }

}

physics :
{
  producers:
  {

    # Generate Event
    generate:
    {
      module_type   : EventGenerator
      inputfile     : "Mu2eG4/test/genconfig_02.txt"
    }

    # Run G4 and add hits to the event
    g4run :
    {
      module_type          : G4
      generatorModuleLabel : generate
    }

  }


  analyzers:
  {

    checkhits2:
    {
      module_type          : ReadBack
      generatorModuleLabel : generate
      g4ModuleLabel        : g4run
      minimumEnergy        : 0.000
      maxFullPrint         : 201
    }

  } 

  p1 : [generate , g4run ]
  e1 : [checkhits, outfile]

  trigger_paths  : [p1]
  end_paths      : [e1]

}

outputs:
{

  outfile :
  {
    module_type   :   RootOutput
    filename      :   "replayAllData.root"
    fastCloning   :   false
  }

}

