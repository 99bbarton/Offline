#include "minimalMessageService.fcl"
#include "standardProducers.fcl"
#include "standardServices.fcl"

# Give this job a name.
process_name : g4study

# Start form an empty source
source : {
  module_type : EmptyEvent
  maxEvents : 100
}

services : {

  message               : @local::default_message
  TFileService          : { fileName : "g4study.root" }
  RandomNumberGenerator : { }

  user : {
    GeometryService        : { inputFile      : "Mu2eG4/test/g4studyGeom.txt"  }
    ConditionsService      : { conditionsfile : "Mu2eG4/test/conditions_01.txt"      }
    GlobalConstantsService : { inputFile      : "Mu2eG4/test/globalConstants_01.txt" }
    G4Helper               : { }
    SeedService            : @local::automaticSeeds
  }

}

physics : {

  producers:  {

    generate:
    {
      module_type          : EventGenerator
      inputfile            : "Mu2eG4/test/g4studyParticleGun.txt"
      allowReplacement     : true
      messageOnReplacement : true
    }

    g4run :
    {
      module_type          : Mu2eG4Study
      diagLevel            : 1
      generatorModuleLabel : generate
#      visMacro             : "Mu2eG4/test/visxy.mac"
#      visMacro             : "Mu2eG4/test/visxz.mac"
#      visMacro             : "Mu2eG4/test/visyz.mac"
#      visMacro             : "Mu2eG4/test/vis45.mac"
#      visMacro             : "Mu2eG4/test/visTree.mac"
    }

    randomsaver          : @local::randomsaver

  }


  analyzers: {

    checkhits:
    {
      module_type            : Mu2eG4StudyReadBack
      generatorModuleLabel   : generate
      g4ModuleLabel          : g4run
      minimumEnergy          : 0.000
      maxPrint               : 100
      diagLevel              : 1
    }

  } 

  p1 : [generate , g4run , randomsaver]
  e1 : [checkhits , outfile]

  trigger_paths  : [p1]
  end_paths      : [e1]

}

outputs:  {

  outfile : {
    module_type   :   RootOutput
    fileName      :   "data_g4study.root"
  }

}

// Initialze seeding of random engines: do not put these lines in base .fcl files for grid jobs.
services.user.SeedService.baseSeed         :  0
services.user.SeedService.maxUniqueEngines :  20

