import os.path
Import('env')


Import('mu2e_helper')

helper=mu2e_helper()

mainlib = helper.make_mainlib ( [ 'mu2e_RecoDataProducts',
                                  'mu2e_TrackerGeom',
                                  'mu2e_ConfigTools',
                                  'mu2e_Mu2eInterfaces',
                                  'mu2e_DataProducts',
                                  'art_Framework_Core',
                                  'art_Framework_Services_Registry',
                                  'CLHEP',
                                  'cetlib',
                                  ] )

helper.make_plugins( [ mainlib,
                       'mu2e_TrackerConditions',
                       'mu2e_Mu2eBTrk',
                       'mu2e_Mu2eInterfaces',
                       'mu2e_ConfigTools',
                       'art_Framework_Principal',
                       'art_Persistency_Provenance',
                       'canvas_Persistency_Provenance',
                       'art_Framework_Services_Registry',
                       'MF_MessageLogger',
                       'fhiclcpp',
                       'cetlib',
                       'boost_filesystem',
                       'boost_system',
                       ] )


helper.make_dict_and_map( [ mainlib,
                            ] )


