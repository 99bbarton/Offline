import os.path
Import('env')


Import('mu2e_helper')

helper=mu2e_helper()

mainlib = helper.make_mainlib ( [ 'art_Framework_Core',
                                  'art_Framework_Services_Registry',
                                  'mu2e_Mu2eInterfaces',
                                  'mu2e_Mu2eUtilities',
                                  'mu2e_ConfigTools',
                                  'mu2e_TrackerConditions',
                                  'HepPDT',
                                  'HepPID',
                                  'MF_MessageLogger',
                                  ] )

helper.make_plugins( [ mainlib,
                       'art_Framework_Core'
                       ] )


helper.make_dict_and_map( [ mainlib,
                            ] )


