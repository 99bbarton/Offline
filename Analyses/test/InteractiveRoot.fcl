# An example of how to run a modules which creates a TCanvas.
# You need to in the TCanvas to move the job along.
# It requires the existence of the input file data_03.root, that was
# made by g4test_03.py
#
# $Id: InteractiveRoot.fcl,v 1.2 2011/05/25 13:39:27 kutschke Exp $
# $Author: kutschke $
# $Date: 2011/05/25 13:39:27 $
#
# Original author Rob Kutschke

#include "minimalMessageService.fcl"
#include "diagnostics.fcl"
#include "standardProducers.fcl"

# Give this process a name.
process_name : InteractiveRoot

# Read events from a file (made by example 3)
source :
{
  module_type : RootInput
  fileNames : ["data_03.root"]
  maxEvents : 100
}

services :
{
  message : @local::mf_debugging

  # Adjust configuration of message logger:
  # Load the standard message logger configuration:
  # Threshold=Info (from using mf_interactive). 
  # Limit of 5 per category; then exponential backoff.
  message.destinations.log.default.limit : 5
    
    
  TFileService :
  {
    fileName      : "InteractiveRoot.root"
    closeFileFase : false
  }

  RandomNumberGenerator : { }

  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/geom_01.txt"
    }

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }
  }

} # close of services block

physics :
{
  producers:
  {
  }

  analyzers:
  {
    # Look at the hits from G4.
    root1:
    {
      module_type   : InteractiveRoot
      g4ModuleLabel : g4run
    }
  }

  p1 : []
  e1 : [root1]


  trigger_paths  : [p1]
  end_paths      : [e1]

}



