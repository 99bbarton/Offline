# Configuration file for Readback
#
# Readback the output of g4test_03.fcl; make histograms and printout.
#
# $Id: extmon_uci_readback.fcl,v 1.2 2012/01/25 02:02:00 youzy Exp $
# $Author: youzy $
# $Date: 2012/01/25 02:02:00 $

#include "minimalMessageService.fcl"
#include "standardProducers.fcl"

# Give this job a name.  
process_name : ExtMonUCIReadBack01

# Start form an empty source
source : 
{ 
  module_type : RootInput
  fileNames   : [ "data_03.root" ]
  maxEvents : -1
}

services : 
{
  message : @local::default_message 

  TFileService : 
  {
    fileName : "readback.root"
  }

  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/geom_01.txt"
    }  

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }

  }

}

physics :
{
  producers:
  {  }


  analyzers:
  {

    checkhits:
    {
      module_type            : ReadVirtualDetector 
#      module_type            : ExtMonUCIReadBack
      generatorModuleLabel   : generate
      g4ModuleLabel          : g4run
      minimumEnergy          : 0.000
      maxFullPrint           : 1
      diagLevel              : -1
    }

  } 

  e1 : [checkhits]

  end_paths      : [e1]

}

