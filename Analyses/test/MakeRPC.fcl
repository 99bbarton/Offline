# Configuration file for G4Test03
#
#  - Generate 200 events including one conversion electron plus
#    some number of background processes.
#  - Run these through G4.
#  - No event display.
#  - Form StrawHits from StepPointMC objects
#  - Write event data to an output file
#  - Save state of random numbers to the event-data output file
#******change 3 places, TFile, input file, outputfile
#
# $Id: MakeRPC.fcl,v 1.1 2011/12/05 17:41:32 rhbob Exp $
# $Author: rhbob $
# $Date: 2011/12/05 17:41:32 $

#include "minimalMessageService.fcl"
#include "standardProducers.fcl"

# Give this job a name.
process_name : MakeRPCs

# Start form an empty source
source :
{
  module_type : EmptyEvent
  maxEvents : 10000000
}

services :
{
  message : @local::default_message

  TFileService :
  {
    fileName : "RPCMaker.root"
  }

  RandomNumberGenerator : { }

# Uncomment to enable memory use profiling
# SimpleMemoryCheck :
# {
#   oncePerEventMode : false
#   showMallocInfo   : false
#   ignoreTotal      : 5
# }
# Uncomment to enable per module timing
#   Timing :
#   {
#    useJobReport : true
#   }

# Uncomment to enable trace printout to show what the framework calls when.
#  scheduler: { wantTracer : true }


  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/geom_01.txt"
    }

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }

    G4Helper : { }

  }

}

physics :
{
  producers:
  {

    # Generate the event
    generate: @local::generate

    # Run G4 and add hits to the event
    g4run : @local::g4run

    # Form StrawHits (SH).
    makeSH : @local::makeSH

    # Form CaloHits (APD hits)
    CaloReadoutHitsMaker : @local::CaloReadoutHitsMaker

    # Form CaloCrystalHits (reconstruct crystals from APDs)
    CaloCrystalHitsMaker : @local::CaloCrystalHitsMaker

    randomsaver : @local::randomsaver

  }


  p1 : [generate, g4run,
        makeSH, CaloReadoutHitsMaker, CaloCrystalHitsMaker,
        randomsaver ]
  e1 : [outfile]

  trigger_paths  : [p1]
  end_paths      : [e1]

}

outputs:
{
  outfile :
  {
    module_type   :   RootOutput
    fileName      :   "/scratch/mu2e/users/rhbob/rpcTestData.root"
    outputCommands:   [ "keep *_*_*_*"
#                        ,"drop mu2e::PointTrajectorymv_*_*_*"
                      ]
  }

}
physics.producers.generate.inputfile : "Analyses/test/rpcInternalTestConfig.txt"
