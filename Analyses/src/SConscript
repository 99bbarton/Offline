import os, re
Import('env')

Import('mu2e_helper')

helper=mu2e_helper();

rootlibs = os.environ['ROOTLIBS']

mainlib = helper.make_mainlib ( [ 'art_Framework_Core',
                                  'art_Framework_Services_Optional_TFileService_service',
                                  'mu2e_GeometryService.so',
                                  'mu2e_ConditionsService.so',
                                  'mu2e_Mu2eUtilities.so',
                                  'mu2e_GeneralUtilities.so',
                                  'mu2e_MCDataProducts.so',
                                  'mu2e_RecoDataProducts.so',
                                  'CLHEP',
                                  rootlibs
                                  ] )

helper.make_plugins( [ mainlib,
                       'art_Framework_Core',
                       'art_Framework_Services_Optional_TFileService_service',
                       'mu2e_GeometryService.so',
                       'mu2e_ConditionsService.so',
                       'mu2e_Mu2eUtilities.so',
                       'mu2e_GeneralUtilities.so',
                       'mu2e_CaloCluster.so',
                       'mu2e_MCDataProducts.so',
                       'mu2e_RecoDataProducts.so',
                       'CLHEP',
                       rootlibs
                       ] )

helper.make_dict_and_map( [ mainlib,
                          ] )

# this tells emacs to view this file in python mode.
# Local Variables:
# mode:python
# End:
