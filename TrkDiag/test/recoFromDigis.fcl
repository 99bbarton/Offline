# recoFromDigis.fcl
#
# FCL configuration file to perform the reconstruct from digis onwards
#
# A. Edmonds May 2018

#include "fcl/minimalMessageService.fcl"
#include "fcl/standardProducers.fcl"
#include "fcl/standardServices.fcl"
#include "TrkDiag/fcl/prolog.fcl"

process_name : recoFromDigis

source : {
  module_type : RootInput
}

services : { @table::Services.Reco
}

physics : {

  producers : {
      @table::TrkAna.producers
  }

  analyzers : {
    @table::TrkAna.analyzers
    @table::TrkDiag.analyzers
    genCountLogger: { module_type: GenEventCountReader }

    Validation : {
      module_type : Validation
      validation_level : 1
    }
  }

  TriggerPath : [ @sequence::TrkAna.RecoSequence ]
  EndPath : [ genCountLogger, @sequence::TrkAna.EndSequence, SHD, Validation ]
}
