# Test the seeds service.
#  - Colliding seeds in preDefined mode.
#
#
# $Id: test04.fcl,v 1.2 2012/02/06 21:03:05 kutschke Exp $
# $Author: kutschke $
# $Date: 2012/02/06 21:03:05 $

#include "minimalMessageService.fcl"

# Give this job a name.
process_name : SeedTest01

# Start form an empty source
source :
{
  module_type : EmptyEvent
  maxEvents : 1
}

services :
{
  message : @local::default_message

  user : {
     SeedService: {
      policy            : "preDefined"
      baseSeed          :     1
      maxUniqueEngines  :    20
      checkRange        :  true
      verbosity         :     2
      endOfJobSummary   :  false

      stest01 : {
         a : 2
         b : 4
        }

      stest02 : {
         a : 6
         c : 2
      }
     }
  }

}

physics :
{
  analyzers: {
    stest01 : {
      module_type : SeedTest01
      testMode      : 1
      instanceNames : [ "a", "b" ]
    }

    stest02 : {
      module_type : SeedTest01
      testMode      : 1
      instanceNames : [ "a", "c" ]
    }

  }

  e1 : [stest01, stest02]

  end_paths      : [e1]

}
