{

  gROOT->Reset();

  // Load the script that does the real work.
//  gROOT->ProcessLine(".L KalmanTests/test/KalFit.C");
  gROOT->LoadMacro("KalmanTests/test/KalFit.C");
  

  // Change some style options
  gROOT->SetStyle("Plain");
  gStyle->SetOptStat("emruo");
  gStyle->SetOptFit(11111);

  // Open the file that contains the TTree
  TFile* file = new TFile( "KalFit01.root");

  // Get the TTree from the file
  TTree* hits;  file->GetObject("KalFitTest/hitdiag",  hits);
  TTree* trks;  file->GetObject("KalFitTest/trkdiag",  trks);
  
  // Make the plots.
  KalFitHit(hits);
  KalFitTrk(trks);

}
