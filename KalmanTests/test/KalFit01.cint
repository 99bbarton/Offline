{

  gROOT->Reset();

  // Load the script that does the real work.
  gROOT->ProcessLine(".L KalmanTests/test/KalFit.C");

  // Change some style options
  gROOT->SetStyle("Plain");
  gStyle->SetOptStat("emruo");

  // Open the file that contains the TTree
  TFile* file = new TFile( "KalFit_06.root");

  // Get the TTree from the file
  TTree* hits;  file->GetObject("KalFit/hitdiag",  hits);
  
  // Make the plots.
  KalFitHit(hits);

}
