        'art_Framework_IO_Root',
        'art_Framework_IO_Root_detail_sources',
        'art_Persistency_Common',
        'art_Persistency_Provenance',
        'art_Utilities',
        'canvas',
        'MF_MessageLogger',
        'fhiclcpp',
        'cetlib',
        'cetlib_except',
        'hep_concurrency',
        'CLHEP',
        'Hist',
        'Core',
        'boost_filesystem',
        'boost_system',
 ] )


