import os
Import('env')
Import('mu2e_helper')

helper=mu2e_helper();

mainlib = helper.make_mainlib ( [ 'mu2e_ConditionsService',
                                  'mu2e_MCDataProducts',
                                  'mu2e_DataProducts',
                                  'CLHEP' ] )

helper.make_plugins( [ mainlib,
                       'mu2e_MCDataProducts',
                       'mu2e_DataProducts',
                       'mu2e_ConditionsService',
                       'mu2e_SeedService_SeedService_service',
                       'art_Framework_Core',
                       'CLHEP'] )

