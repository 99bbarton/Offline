#include "minimalMessageService.fcl"
#include "standardProducer.fcl"

# Give this job a name.
process : HoughTest0501

# Start form an empty source
source :
{
  module_type : EmptyEvent
  maxEvents   : 1000
}

services :
{
  message : @local::default_message

  TFileService :
  {
    fileName : "houghtest_0501.root"
  }

  RandomNumberGeneratorService : { }

  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/geom_01"
    }

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }

  }

}

physics :
{
  producers:
  {

    # Generate Event
    #  Make some generated tracks and add them to the event.
    #1 is nothing but conversions
    #2 has cosmics and radiative pi's

    generate:
    {
      module_type   : EventGenerator
      inputfile     : "Mu2eG4/test/genconfig_03.txt"
    }

    # Run G4 and add hits to the event
    g4run :
    {
      module_type          : G4
      generatorModuleLabel : generate
      seed                 : [9877]
    }

    #apply noise and inefficiency
    simpleen:
    {
      module_type  : SimpleEffyNoise
      diagLevel    : 1
      noiseRate    : .02
      hitIneffy    : .0
    }

    #Look at the hits from G4
    checkhits:
    {
      module_type     : HoughTest
      NPeakSearch     : 50
      hitCreatorName  : simpleen
      maxFullPrint    : 5
    }


  }

  analyzers:
  {

    # Look at the hits from G4.
    plothits :
    {
      moule_type     : HoughTuner
      hitCreatorName : simpleen
      maxFullPrint   : 5
    }
 
  }

  p1 : [generate , g4run, simpleen, checkhits]
  e1 : [plothits, outfile]

  trigger_paths  : [p1]
  end_paths      : [e1]

}

outputs:
{

  outfile :
  {
    module_type   :   RootOutput
    filename      :   "hough_0501.root"
  }

}

