#include "minimalMessageService.fcl"
#include "standardProducers.fcl"

# Give this job a name.
process_name : HoughTest03

# Start form an empty source
source :
{
  module_type : EmptyEvent
  maxEvents   : 100
}

services :
{
  message : @local::default_message

  TFileService :
  {
    fileName : "houghtest_03.root"
  }

  RandomNumberGeneratorService : { }

  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/geom_01"
    }

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }

    G4Helper : { }

  }

}

physics :
{
  producers:
  {

    # Generate Event
    #  Make some generated tracks and add them to the event.
    #1 is nothing but conversions
    #2 has cosmics and radiative pi's

    generate:
    {
      module_type   : EventGenerator
      inputfile     : "Mu2eG4/test/genconfigReflection.txt"
    }

    # Run G4 and add hits to the event
    g4run :
    {
      module_type          : G4
      generatorModuleLabel : generate
      seed                 : [9877]
    }

  }

  analyzers:
  {

    # Save state of random numbers to the event.
    randomsaver :
    { 
      module_type   : RandomNumberSaver
    }

    # Look at the hits from G4.
    checkhits :
    {
      moule_type     : HoughTest
      NPeakSearch    : 50
      hitCreatorName : g4run
      maxFullPrint   : 5
    }
 
  }

  p1 : [generate , g4run]
  e1 : [checkhits, outfile]

  trigger_paths  : [p1]
  end_paths      : [e1]

}

outputs:
{

  outfile :
  {
    module_type   :   RootOutput
    filename      :   "hough_03.root"
    outputCommands:   ["keep *_*_*_*"]
  }

}

