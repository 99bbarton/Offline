        babarlibs,
        'art_Framework_Services_Registry',
        'art_Utilities',
        'canvas_Utilities',
        'cetlib',
        'CLHEP',
        'boost_system',
        ] )

# Fixme: do I need all of babarlibs below?
helper.make_dict_and_map( [
        mainlib,
        babarlibs,
        'art_Persistency_Common',
        'canvas_Persistency_Common',
        'art_Utilities',
        'canvas_Utilities',
        'cetlib',
        'CLHEP',
    ] )


