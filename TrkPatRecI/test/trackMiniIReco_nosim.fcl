#include "minimalMessageService.fcl"
#include "standardProducers.fcl"
#include "standardServices.fcl"

#include "TrkPatRecI/test/trackerModules.fcl"

# Give this process a name.
process_name : reTrackRecoITfit

# Read events from a file (made by example 3)
source :
{
  module_type : RootInput
  fileNames : ["data_it.root"]
  maxEvents : -1
}

services :
{
  message : @local::default_message
  TFileService : { fileName      : "TrackRecoITlghtweeds.root" }
  RandomNumberGenerator : { }

  user : {

    GeometryService   : { inputFile : "Mu2eG4/test/geom_01.txt" }
    ConditionsService : { conditionsfile : "Mu2eG4/test/conditions_01_it.txt"  }
    GlobalConstantsService : { inputFile : "Mu2eG4/test/globalConstants_01.txt" }
    G4Helper          : { }
    SeedService       : @local::automaticSeeds
  }

} # close of services block

physics :
{
  producers:
  {

    trckRjctByTime       : @local::trckRjctByTime
    trackMiniIReco       : @local::trackMiniIReco
    kalmanFit            : @local::kalmanFit
    trackRecoFit         : @local::trackRecoFit

  }

  analyzers:
  {
  }



  p1 : [trckRjctByTime,trackMiniIReco,trackRecoFit,kalmanFit]
  e1 : []


  trigger_paths  : [p1]
  end_paths      : [e1]

}

outputs: {

  outfile : {
    module_type   :   RootOutput
    fileName      :   "data_it.root"
#    outputCommands:   [ "keep *_*_*_*"
#                        ,"drop mu2e::PointTrajectorymv_*_*_*"
#                      ]
  }

}

// Initialze seeding of random engines: do not put these lines in base .fcl files for grid jobs.
services.user.SeedService.baseSeed         :  0
services.user.SeedService.maxUniqueEngines :  20

//physics.producers.kalmanFit.debuglevel : 1
physics.producers.kalmanFit.doEndCapExtrapol : true
physics.producers.kalmanFit.fitparticle : 11
physics.producers.kalmanFit.fitdirection : 0 
//physics.producers.kalmanFit.KalFit.fieldCorrection : true
//physics.producers.kalmanFit.KalFit.BFieldIntDivTol : 0.1
//physics.producers.kalmanFit.KalFit.BFieldIntTol : 0.001

//add proton rejection
physics.producers.trckRjctByTime.protonRejecEff        : 1.00
physics.producers.trckRjctByTime.pulseCut              : 0.0015

//use TD into Pattern Recognition
physics.producers.trackMiniIReco.useZCoordinate : true


physics.producers.trackRecoFit.doEndCapExtrapol : true
physics.producers.trackRecoFit.maxfltdif                               : 10
physics.producers.trackRecoFit.maxMatReinter                           : 10
physics.producers.trackRecoFit.fitparticle : 11
physics.producers.trackRecoFit.fitdirection : 0 
//physics.producers.trackRecoFit.KalFit.fieldCorrection : true
//physics.producers.trackRecoFit.KalFit.BFieldIntDivTol : 0.1
//physics.producers.trackRecoFit.KalFit.BFieldIntTol : 0.001
