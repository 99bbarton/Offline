#include "minimalMessageService.fcl"

# Give this job a name.
process : EvtDisplyConversions

# Start form an empty source
source :
{
  module_type : RootInput
  fileNames   : "/grid/fermiapp/mu2e/DataFiles/ExampleDataFiles/Tutorials/conversionOnly.root"))
}

services :
{
  message : @local::default_message

  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/geom_cosmic.txt"
    }

    ConditionsService :
    {
      conditionsfile : "Mu2eG4/test/conditions_01.txt"
    }

  }

}

physics :
{
  producers:  { }

  analyzers:
  {

    eventdisplay: 
    {
      module_type          : EventDisplay
    }
  }

  e1 : [eventdisplay]

  end_paths      : [e1]

}

