#include "minimalMessageService.fcl"
#include "standardProducers.fcl"
#include "standardServices.fcl"
#include "TrkDiag/fcl/KalDiag.fcl"

process_name : TrkPatRecTest

source :
{
  module_type : RootInput
}

services :
{
  message : @local::default_message
  TFileService           : { fileName : "EventDisplayTPR.root" }
  RandomNumberGenerator  : { }
  GeometryService        : { inputFile : "Mu2eG4/geom/geom_common.txt" }
  ConditionsService      : { conditionsfile : "Mu2eG4/test/conditions_01.txt" }
  GlobalConstantsService : { inputFile : "Mu2eG4/test/globalConstants_01.txt" }
  G4Helper               : { }
  BTrkHelper             : @local::BTrkHelperDefault
}

physics :
{
  producers : 
  {
    @table::Tracking.producers
  }

  analyzers:
  {
    eventdisplay:
    {
      module_type     : EventDisplay
    }
  }

  p1: [ 
        @sequence::Tracking.TPRDeM, 
        @sequence::Tracking.TPRUeM 
      ]

  e1 : [eventdisplay]

  trigger_paths  : [p1]
  end_paths      : [e1]

}

source.readParameterSets : false

