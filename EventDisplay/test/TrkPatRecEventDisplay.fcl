#include "minimalMessageService.fcl"
#include "standardProducers.fcl"
#include "standardServices.fcl"

process_name : TrkPatRecEventDisplay

source :
{
  module_type : EmptyEvent
  maxEvents : 100
}

services :
{
  message               : @local::default_message
  TFileService          : { fileName : "TrkPatRecEventDisplay.root" }
  RandomNumberGenerator : { }

  user :
  {
    SeedService            : @local::automaticSeeds
    GeometryService        : { inputFile : "Mu2eG4/test/geom_01.txt" }
    ConditionsService      : { conditionsfile : "Mu2eG4/test/conditions_01.txt" }
    GlobalConstantsService : { inputFile : "Mu2eG4/test/globalConstants_01.txt" }
    G4Helper               : { }
  }
}

physics :
{
  producers:
  {
    generate : @local::generate
    g4run    : @local::g4run
    makeSH   : @local::makeSH
    MakeStereoHits : @local::MakeStereoHits
    FlagStrawHits  : @local::FlagStrawHits
    FlagBkgHits    : @local::FlagBkgHits
    CaloReadoutHitsMaker : @local::CaloReadoutHitsMaker
    CaloCrystalHitsMaker : @local::CaloCrystalHitsMaker
    TrkPatRec: @local::TrkPatRec
  }

  analyzers:
  {
    eventdisplay:
    {
      module_type     : EventDisplay
      g4ModuleLabel   : "g4run"
    }
  }

  p1 : [generate , g4run, makeSH, MakeStereoHits, FlagStrawHits, FlagBkgHits, CaloReadoutHitsMaker, CaloCrystalHitsMaker, TrkPatRec]
  e1 : [eventdisplay]

  trigger_paths  : [p1]
  end_paths      : [e1]

}

services.user.SeedService.baseSeed         :  3
services.user.SeedService.maxUniqueEngines :  20 

