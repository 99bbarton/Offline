# Parameters to analyze the following files:
# 
# Bob Bernstein's second set of CE and DIO runs 
# (34322 intended .5M CE's, and 34393 tried for 3M DIO's with CZ distribution 
# on 102.0 to 105 -- both actually have fewer generated because of job failures)
# The CE and DIO files were created April 2012 and passed through the
# ConsolidateMultipleTrackFiles tool. 
# Bob Bernstein's RPC files from Feb 2012 representing 2M generated RPC's;
# the tool ignores RPC time cuts, using its own semi-analytic weight
# normalizations.  These RPC files are known to be a bit imperfect, but 
# "good enough for now".

# The tracks in these files were all found with an early version of the fitter.
# The momentum error core and tails are larger than they would be today, and
# efficiency smaller.

outputFile:  "example_bernstein_2.out"
#outputFile:  "cerr"

Root:
{
  rootFile: "example_bernstein_2.root"
  cintFile: "example_bernstein_2.cint"
}

trackerCuts: 
{
# cuts B
  minimum_nactive:    20
  maximum_t0err:      1.5
  maximum_fitmomerr:  0.20
  minimum_fitcon:     1.0e-4
}
# See standard alternative tracker cuts at end of this file

momentumCuts:
{
  optimize_pcut_low:  true
  optimize_pcut_high: true  
}

# Time cuts (starts of live time windows)
t0cuts : [770]
# If you wish to scan possible t0 cuts:
# t0cuts : [ 710, 730, 750, 770, 790, 810 ]

# Bernstein's  CE34322 CE data
conversionElectrons:
{
CEdataFiles : 
[
"/mu2e/data/users/mf/CEFilesMixedAllTime/CE34322_0_49.root"
]
numberOfGeneratedMuonConversions : 490000
liveGateFraction                 : 1.00
# Live gate fraction is used if electrons were all generated past some
# arbitrary time cut.  Here the mct0 distribution is complete:  starts rising
# at about 250 to a peak at 400, and falls off from there.
}

# Bernstein's mixed all time DIO34393 DIO data
decayInOrbitElectrons:
{
DIOdataFiles : 
[
"/mu2e/data/users/mf/DIOFilesMixedAllTime/DIO34393_0_49.root"    ,
"/mu2e/data/users/mf/DIOFilesMixedAllTime/DIO34393_50_99.root"   ,
"/mu2e/data/users/mf/DIOFilesMixedAllTime/DIO34393_100_199.root" 
]
numberOfGeneratedDIOs     : 2815000
dioTracksWeighted         : false
DIOgenerationLowerLimit   : 102.0
liveGateFraction          : 1.00
}

# Bernsteins's mixed-tag RPC data
radiativePionCaptureElectrons:
{
RPCdataFiles : 
[
"/mu2e/data/users/mf/RPCFilesMixed1tag.root" ,
"/mu2e/data/users/mf/RPCFilesMixed2tag.root" 
]
numberOfGeneratedRPCs            : 2.0e7
extinction                       : 1.0e-10
# Notice that RPC's do not use liveGateFraction
}

# which figure of merit to optimize momentum window:  
#  FC90 sensitivity versus smoothed Punzi sensitivity
meritFunction: FCsensitivity

# Control of verbosity:

verbosity:  
{ 
  signalEfficiency      : true
  backgroundStrength    : true
  progress              : false
  tracksTTreeLocation   : false
  fileNames             : true
  fileEntriesStatistics : true
  dataProperties        : false
  RPClivePionFraction   : false
  spectra               : false
  backgroundSplines     : false 
  allTables             : false 
  detailedCutTrace      : true
  detailedTrace         : false
}

