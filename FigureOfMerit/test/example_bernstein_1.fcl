# Parameters to analyze the following files:
# 
# Bob Bernstein's first set of CE (50000) and DIO (194000 - he tried for 200000
# but 3 jobs faileed out of a hundred) runs. DIO's with CZ distribution 
# on 102.5 to 105 -- both actually have fewer generated because of job failures)
# The CE and DIO files were created Feb 17-22 2012  . 
# Bob Bernstein's RPC files from Feb 2012 representing 2M generated RPC's;
# the tool ignores RPC time cuts, using its own semi-analytic weight
# normalizations.  These RPC files are known to be a bit imperfect, but 
# "good enough for now".

# The tracks in these files were all found with a very early version of the 
# fitter.
# The momentum error core and tails are much larger than they would be today, 
# and efficiency smaller.

outputFile:  "example_bernstein_1.out"

trackerCuts: 
{
# cuts B
  minimum_nactive:    20
  maximum_t0err:      1.5
  maximum_fitmomerr:  0.20
  minimum_fitcon:     1.0e-4
}
# See standard alternative tracker cuts at end of this file

momentumCuts:
{
  optimize_pcut_low:  true
  optimize_pcut_high: true  
}

# Time cuts (starts of live time windows)
t0cuts : [770]

# Bernstein's  CE4322 CE data
conversionElectrons:
{
CEdataFiles : 
[
"/mu2e/data/users/mf/CEFilesMixed.root"
]
numberOfGeneratedMuonConversions : 50000
liveGateFraction                 : 0.47
# The electrons were created starting at 700 nsec.  Only 47% survive to that
# time.
}

# Bernstein's first mixed no tag DIO data
decayInOrbitElectrons:
{
DIOdataFiles : 
[
"/mu2e/data/users/mf/DIOFilesMixed1tag.root"    ,
"/mu2e/data/users/mf/DIOFilesMixed2tag.root"   
]
numberOfGeneratedDIOs     : 194000
dioTracksWeighted         : false
DIOgenerationLowerLimit   : 102.5
liveGateFraction          : 0.47
# All decays in orbit were generated after 700 nsec.  Only 47% of the 
# Stopped muons that DIO would do so after 700 nsec.
}

# Bernsteins's mixed-tag RPC data
radiativePionCaptureElectrons:
{
RPCdataFiles : 
[
"/mu2e/data/users/mf/RPCFilesMixed1tag.root" ,
"/mu2e/data/users/mf/RPCFilesMixed2tag.root" 
]
numberOfGeneratedRPCs            : 2.0e7
extinction                       : 1.0e-10
# Notice that RPC's do not use liveGateFraction
}

# which figure of merit to optimize momentum window:  
#  FC90 sensitivity versus smoothed Punzi sensitivity
meritFunction: FCsensitivity

# Control of verbosity:

verbosity:  
{ 
  signalEfficiency      : true
  backgroundStrength    : true
  progress              : false
  tracksTTreeLocation   : false
  fileNames             : true
  fileEntriesStatistics : true
  dataProperties        : false
  RPClivePionFraction   : false
  spectra               : false
  backgroundSplines     : false 
  allTables             : false 
  detailedCutTrace      : true
  detailedTrace         : false
}

