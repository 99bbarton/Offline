#Example to analyze the following files:
#
# Hodges CE file made from .1M generated conversion electrons stopped in a 
# with a 49-foil target; Hodges DIO file, also based on .1M (which is way too
# few) geenrated DIO's in that same target; Bernstiens RPC's based on the
# 17-foil target.  (Since the RPC momenta are all over the place anyway, it
# is likely that going to a different target configuration but with the same
# target mass will not lead to a noticeable change in the RPC impact.)
#
# The DIO and CE files were made WITHOUT the proton absorber; this shifts the
# DIO spectrum, in particular, up by about 800 KeV.

outputFile:  "example_hodges_49foil.out"

Root:
{
  rootFile : "example_hodges_49foil.root"
  cintFile : "example_hodges_49foil.cint"
}

trackerCuts: 
{
# cuts B
  minimum_nactive:    20
  maximum_t0err:      1.5
  maximum_fitmomerr:  0.20
  minimum_fitcon:     1.0e-4
}
# See standard alternative tracker cuts at end of this file

momentumCuts:
{
  optimize_pcut_low:  true
  optimize_pcut_high: true  
}

# Time cuts (starts of live time windows)
t0cuts  : [770]

# Hodges early 49-foil CE data
conversionElectrons:
{
CEdataFiles : 
[
"/sim1/home2/mu2e/zhodge14/mu2e_work/root_files/CE_root/CE_geom49foils.root"
]
numberOfGeneratedMuonConversions : 1.0e5
liveGateFraction                 : 1.00
# Explanation of liveGateFraction -- 
# All conversions were generated using the proper time distribution.
# No correction needs to be made for an artificially imposed live time gate.
}

# Zack's 49 foil DIO data
decayInOrbitElectrons:
{
DIOdataFiles : 
[
"/sim1/home2/mu2e/zhodge14/mu2e_work/root_files/DIO_root/DIO_geom49foils.root"
]
numberOfGeneratedDIOs : 1.0e5
dioTracksWeighted     : false
DIOgenerationLowerLimit: 100.0
liveGateFraction      : 0.47 
# Because the DIO's were generated with minimum mct0 of 700
#alsoReadWithNoT0cut   : true  
minimumMeaningfulDIOtail : 5
# Explanation:  Based on some background files, the automated optimization
# chooses a momentum cut window.  If there are too few tracks in the files,
# sometimes this will push the cut up so far that there are few samples in
# the background distribution above the cut.  By default, FMtool wants to see
# 10 or more samples above that cut; this reduces that demand to 5.
}

# Bernsteins's mixed-tag RPC data
radiativePionCaptureElectrons:
{
RPCdataFiles : 
[
"/mu2e/data/users/mf/RPCFilesMixed1tag.root" ,
"/mu2e/data/users/mf/RPCFilesMixed2tag.root" 
]
numberOfGeneratedRPCs            : 2.0e7
extinction                       : 1.0e-10
}

# which figure of merit to optimize momentum window:  
#  FC90 sensitivity versus smoothed Punzi sensitivity
meritFunction : FCsensitivity

binning:
{
lowestBin    : 102.5
topOfLastBin : 106.0
nBins        : 175
}

# Control of verbosity:

verbosity:  
{ 
  signalEfficiency      : true
  backgroundStrength    : true
  progress              : false
  tracksTTreeLocation   : false
  fileNames             : true
  fileEntriesStatistics : true
  dataProperties        : false
  RPClivePionFraction   : false
  spectra               : false
  backgroundSplines     : false 
  detailedCutTrace      : true
  detailedTrace         : true
  allTables             : false 
}

