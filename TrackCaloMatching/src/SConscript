Import('env')

Import('mu2e_helper')

helper=mu2e_helper()

rootlibs = env['ROOTLIBS']

babarlibs = env['BABARLIBS']

mainlib = helper.make_mainlib ( [
    'mu2e_KalmanTests',
    'mu2e_CaloCluster',
    'mu2e_GeometryService',
    'mu2e_ConditionsService',
    'mu2e_SeedService_SeedService_service',
    'mu2e_Mu2eUtilities',
    'mu2e_GeneralUtilities',
    'mu2e_MCDataProducts',
    'mu2e_RecoDataProducts',
    babarlibs,
    'art_Framework_Core',
    'art_Framework_Services_Optional_TFileService_service',
    'CLHEP',
    'cetlib',
    rootlibs
    ] )

helper.make_plugins( [
    mainlib,
    'mu2e_TrackCaloMatching',
    'mu2e_CaloCluster',
    'mu2e_GeometryService',
    'mu2e_ConditionsService',
    'mu2e_SeedService_SeedService_service',
    'mu2e_Mu2eUtilities',
    'mu2e_GeneralUtilities',
    'mu2e_MCDataProducts',
    'mu2e_RecoDataProducts',
    babarlibs,
    'art_Framework_Core',
    'art_Framework_Services_Optional_TFileService_service',
    'CLHEP',
    'cetlib',
    rootlibs
    ] )

helper.make_dict_and_map( [
    mainlib,
    ] )



# This tells emacs to view this file in python mode.
# Local Variables:
# mode:python
# End:
