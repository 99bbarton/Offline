import os, re

Import('env')

Import('mu2e_helper')

helper=mu2e_helper()

rootlibs = env['ROOTLIBS']

mainlib = helper.make_mainlib ( [
    'art_Framework_Core',
    'art_Framework_Services_Registry',
    'art_Utilities',
    'mu2e_BFieldGeom',
    'mu2e_ExtinctionMonitorFNAL_Geometry',
    'mu2e_CosmicRayShieldGeom',
    'mu2e_CalorimeterGeom',
    'mu2e_TTrackerGeom',
    'mu2e_TrackerGeom',
    'mu2e_StoppingTargetGeom',
    'mu2e_Mu2eHallGeom',
    'mu2e_ProtonBeamDumpGeom',
    'mu2e_ProductionTargetGeom',
    'mu2e_ProductionSolenoidGeom',
    'mu2e_ExternalShieldingGeom',
    'mu2e_DetectorSolenoidGeom',
    'mu2e_BeamlineGeom',
    'mu2e_MECOStyleProtonAbsorberGeom',
    'mu2e_MBSGeom',
    'mu2e_GeomPrimitives',
    'mu2e_Mu2eUtilities',
    'mu2e_ConfigTools',
    'mu2e_Mu2eInterfaces',
    'MF_MessageLogger',
    'fhiclcpp',
    rootlibs
    ] )

helper.make_plugins( [
    mainlib,
    ] )


helper.make_dict_and_map( [
    mainlib,
    'CLHEP'
    ] )


