// Andrei Gaponenko, 2012

#include "minimalMessageService.fcl"
#include "standardProducers.fcl"
#include "standardServices.fcl"

source : {
    module_type : EmptyEvent
    maxEvents : 10
}

services : {
    message : @local::default_message

    scheduler: { defaultExceptions : false }
    TFileService : {}
    RandomNumberGenerator : {}

    user : {
        GeometryService : { inputFile : "ExtinctionMonitorFNAL/test/geom_detectorTest.txt" }
        ConditionsService : { conditionsfile : "Mu2eG4/test/conditions_01.txt" }
        GlobalConstantsService : { inputFile : "Mu2eG4/test/globalConstants_01.txt" }
        SeedService       : @local::automaticSeeds
        G4Helper : { }
    }
}

physics : {
    producers : {
        generate : { module_type   : EventGenerator }
        g4run : @local::g4run
        pixelDigitization : @local::pixelDigitization
        geom : { module_type : GeometryRecorder }
    }
    analyzers: {
        vdprint: {
            module_type: EMFCPrint
            inputModuleLabel  : "g4run"
            inputInstanceName : "virtualdetector"
        }
        emfprintsim: {
            module_type: EMFDetPrintSim
            inputModuleLabel  : "g4run"
            inputInstanceName : ""
        }
        emfSimHits: {
            module_type: EMFDetHistSimHits
            inputModuleLabel  : "g4run"
            inputInstanceName : ""
        }
        emfprintraw: {
            module_type: EMFDetPrintRawHits
            inputModuleLabel  : "pixelDigitization"
            inputInstanceName : ""
        }
        emfprinttruth: {
            module_type: EMFDetPrintRawHitTruth
            hitsModuleLabel  : "pixelDigitization"
            truthModuleLabel  : "pixelDigitization"
        }
        hitValidation: {
            module_type: EMFRawHitsValidator
            inputModuleLabel : "pixelDigitization"
            inputInstanceName : ""
            geomModuleLabel : "geom"
            geomInstanceName : ""
        }
        emfRawHits: {
            module_type: EMFDetHistRawHits
            inputModuleLabel  : "pixelDigitization"
            inputInstanceName : ""
            geomModuleLabel : ""
            foldTimeToMicrobunch : false
        }
    }

    tprint : [ generate, g4run, pixelDigitization ]
    gm  : [ geom ]

    //eprint: [ vdprint, emfprintsim, emfSimHits, emfprinttruth, hitValidation, emfRawHits ]
    eprint: [ hitValidation, emfSimHits, emfRawHits ]
    out : [ FullOutput ]

    trigger_paths  : [gm, tprint]
    end_paths : [ out, eprint ]
}

outputs: { FullOutput : { module_type : RootOutput } }

//----------------------------------------------------------------
services.user.SeedService.baseSeed         :  0
services.user.SeedService.maxUniqueEngines :  20

// somewhat reduce the amount of "volatile" printouts
services.message.destinations.log.noTimeStamps : true
services.message.statistics.noTimeStamps : true

