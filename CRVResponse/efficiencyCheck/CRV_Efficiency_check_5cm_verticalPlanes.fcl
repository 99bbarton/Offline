#include "Mu2eG4/fcl/prolog.fcl"
#include "CRVResponse/efficiencyCheck/prolog5cm.fcl"

BEGIN_PROLOG

outsideCrvCut: 
{
   type: union  //cut all tracks leaving to top or bottom of the vertical CRV (10cm away from edges)
   pars: 
   [
      // +y plane
      { 
        type  : plane 
        normal: [ 0, 1, 0 ] 
        point : [ 0, 2462.8, 0 ] 
      },
      // -y plane
      { 
        type  : plane 
        normal: [ 0, -1, 0 ] 
        point : [ 0, -2037.2, 0 ] 
      }
   ]
}
belowCrvCut:
{
   type: intersection
   pars:
   [
      { 
        type  : plane            //cut all tracks exiting at the +x side of the CRV
                                 //since the "plane check" is in an interect, the next check will be done for all tracks exiting at the +x side of the CRV
        normal: [ 1, 0, 0 ] 
        point : [ -6419.4, 0, 0 ]
      },
      {
        type: union              //the union (in combination with the "constant" below) makes sure that this will always return true
                                 //so that all tracks exiting at the +x side of the CRV will be cut
                                 //however, it also makes sure that the pdgId test will be performed for all tracks exiting at the +x side of the CRV
        pars:
        [
          {
            type : pdgId         //if the track which exits at the +x side of the CRV is a muon, then it will be written to the "belowCRV"
            pars : [ 13, -13 ] 
            write: belowCrv
          },
          {
            type : constant
            value: true
          }
        ]
      }
   ]
}
END_PROLOG


