    ConditionsService      : { conditionsfile : "Mu2eG4/test/conditions_01.txt" }
    GlobalConstantsService : { inputFile      : "Mu2eG4/test/globalConstants_01.txt" }
    G4Helper               : { }
    SeedService            : @local::automaticSeeds
  }
}

physics :
{
  producers:
  {
    generate: 
    {
       module_type          : EventGenerator
       inputfile            : "CRVResponse/efficiencyCheck/genconfig_5cm_downstreamPlanes.txt"
    }

    g4run : 
    {
       module_type: Mu2eG4
       physics: @local::mu2eg4DefaultPhysics
       ResourceLimits: @local::mu2eg4DefaultResourceLimits
       TrajectoryControl: @local::mu2eg4DefaultTrajectories 
       debug: @local::mu2eg4DefaultDebug
       visualization: @local::mu2eg4NoVisualization

       generatorModuleLabel: generate
       MultiStageParameters: {} // this is the first stage

       SDConfig: 
       {
            enableSD: [ CRV ] 
            sensitiveVolumes: []
            TimeVD: { times: [] }
       }

       Mu2eG4StackingOnlyCut: @local::mu2eg4CutNeutrinos

       Mu2eG4SteppingOnlyCut: {}

       Mu2eG4CommonCut: 
       {
         type: union
         pars:
         [
            @local::outsideCrvCut,
            @local::belowCrvCut
         ]
       }
    }

    backgroundOverlay :
    {
       module_type   : CrvBackgroundOverlay
       backgroundFile: "CRVResponse/efficiencyCheck/background_5600.root"
       overlayFactor : 2
    }

    CrvPhotonArrivals: @local::CrvPhotonArrivals
    CrvSiPMResponses : @local::CrvSiPMResponses
    CrvWaveforms     : @local::CrvWaveforms
    CrvRecoPulses    : @local::CrvRecoPulses

    CrvCoincidencePE10T5  : @local::CrvCoincidence
    CrvCoincidencePE12T5  : @local::CrvCoincidence
    CrvCoincidencePE14T5  : @local::CrvCoincidence
    CrvCoincidencePE16T5  : @local::CrvCoincidence
    CrvCoincidencePE18T5  : @local::CrvCoincidence
    CrvCoincidencePE20T5  : @local::CrvCoincidence
    CrvCoincidencePE10T10  : @local::CrvCoincidence
    CrvCoincidencePE12T10  : @local::CrvCoincidence
    CrvCoincidencePE14T10  : @local::CrvCoincidence
    CrvCoincidencePE16T10  : @local::CrvCoincidence
    CrvCoincidencePE18T10  : @local::CrvCoincidence
    CrvCoincidencePE20T10  : @local::CrvCoincidence
    CrvCoincidencePE10T15  : @local::CrvCoincidence
    CrvCoincidencePE12T15  : @local::CrvCoincidence
    CrvCoincidencePE14T15  : @local::CrvCoincidence
    CrvCoincidencePE16T15  : @local::CrvCoincidence
    CrvCoincidencePE18T15  : @local::CrvCoincidence
    CrvCoincidencePE20T15  : @local::CrvCoincidence
    CrvCoincidencePE10T20  : @local::CrvCoincidence
    CrvCoincidencePE12T20  : @local::CrvCoincidence
    CrvCoincidencePE14T20  : @local::CrvCoincidence
    CrvCoincidencePE16T20  : @local::CrvCoincidence
    CrvCoincidencePE18T20  : @local::CrvCoincidence
    CrvCoincidencePE20T20  : @local::CrvCoincidence
  }

  filters: 
  {
    belowCrvFilter: 
    {
      module_type: FilterStepPointMomentum
      inputs : [ "g4run:belowCrv" ]
      cutMomentumMin: 0. // momentum is irrelevant, the only requirement is that the muon exits inside the CRV counter
    }
  }


  trig : [generate, g4run, belowCrvFilter, backgroundOverlay, CrvPhotonArrivals, CrvSiPMResponses, CrvWaveforms, CrvRecoPulses,
          CrvCoincidencePE10T5,
          CrvCoincidencePE12T5,
          CrvCoincidencePE14T5,
          CrvCoincidencePE16T5,
          CrvCoincidencePE18T5,
          CrvCoincidencePE20T5,
          CrvCoincidencePE10T10,
          CrvCoincidencePE12T10,
          CrvCoincidencePE14T10,
          CrvCoincidencePE16T10,
          CrvCoincidencePE18T10,
          CrvCoincidencePE20T10,
          CrvCoincidencePE10T15,
          CrvCoincidencePE12T15,
          CrvCoincidencePE14T15,
          CrvCoincidencePE16T15,
          CrvCoincidencePE18T15,
          CrvCoincidencePE20T15,
          CrvCoincidencePE10T20,
          CrvCoincidencePE12T20,
          CrvCoincidencePE14T20,
          CrvCoincidencePE16T20,
          CrvCoincidencePE18T20,
          CrvCoincidencePE20T20
         ]  

  trigger_paths  : [trig]

  end_paths: []
}

