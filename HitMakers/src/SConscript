#!/usr/bin/env python
#
# Script to build the files found in this directory.
#
# Original author Rob Kutschke.
#

import os
Import('env')
Import('mu2e_helper')

helper=mu2e_helper();

mainlib = helper.make_mainlib ( [ 'art_Framework_Core',
                                  'art_Framework_Modules_RandomNumberSaver_module',
                                  'art_Framework_Services_Optional_TFileService_service',
                                  'mu2e_GeometryService',
                                  'mu2e_ConditionsService_ConditionsService_service',
                                  'mu2e_GlobalConstantsService_GlobalConstantsService_service',
                                  'mu2e_SeedService_SeedService_service',
                                  'mu2e_MCDataProducts',
                                  'mu2e_RecoDataProducts',
                                  'mu2e_GeneralUtilities',
                                  'CLHEP',
                                  'Minuit',  # Fixme - pretty sure we do not want this.
                                ] )

helper.make_plugins( [ mainlib,
                       'art_Framework_Core',
                       'art_Framework_Modules_RandomNumberSaver_module',
                       'art_Framework_Services_Optional_TFileService_service',
                       'mu2e_GeometryService',
                       'mu2e_ConditionsService_ConditionsService_service',
                       'mu2e_SeedService_SeedService_service',
                       'mu2e_MCDataProducts',
                       'mu2e_RecoDataProducts',
                       'mu2e_GeneralUtilities',
                       'mu2e_Mu2eUtilities',
                       'CLHEP',
                       'Minuit'  # Fixme - pretty sure we do not want this.
                     ] )

helper.make_dict_and_map( [ mainlib,
                          ] )

# This tells emacs to view this file in python mode.
# Local Variables:
# mode:python
# End:
