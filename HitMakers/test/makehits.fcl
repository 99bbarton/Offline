#include "minimalMessageService.fcl"

BEGIN_PROLOG

  diagLevel    : 0
  maxFullPrint : 5

END_PROLOG

# Give this job a name.  
process : HitTest01

# Read events from a file (made by Mu2eG4 example g4test_03.py)
source : 
{ 
  module_type : RootInput 
  fileNames : ["data_03.root"]        
  maxEvents : 200
}

services : 
{
  message : @local::default_message 

  TFileService : 
  {
    fileName : "makehits.root"
    closeFileFast : false
  }

  RandomNumberGeneratorService : { }

  user :
  {
    GeometryService :
    {
      inputFile : "Mu2eG4/test/geom_01.txt"
    }  
    ConditionsService :
    {
      inputFile : "Mu2eG4/test/conditions_01.txt"
    }  

  }

}

physics :
{
  producers:
  {
    # Form StrawHits (SH).
    makeSH:
    {
      module_type   : MakeStrawHit
      g4ModuleLabel : g4run
      seed          : [7790]
      diagLevel     : @local::diagLevel
      maxFullPrint  : @local::maxFullPrint
    }
  }

  analyzers:
  {
    # Check the crudeStrawHits
    testSH:
    {
      module_type      : ReadStrawHit
      makerModuleLabel : makeSH
      diagLevel        : 3
      maxFullPrint     : @local::maxFullPrint
    }
  }

  p1 : [makeSH ]
  e1 : [testSH ]


  trigger_paths  : [p1]
  end_paths      : [e1]

}

outputs:
{

 outfile :
 {
   module_type   :   RootOutput
   filename	 :   "hits_03.root"
   fastCloning   :   false
 }

}


