BEGIN_PROLOG

#------------------------------------------------------------------------------
# Form DCHHits (DcH). - 2015-01-23 P.Murat: is it obsolete?
makeDcH : {
  module_type          : MakeDriftCellHit
  g4ModuleLabel        : g4run
  diagLevel            : 0
  maxFullPrint         : 0
  minimumEnergy        : 0.00004
  nzHittingZone        : 1
  zZoneLimits          : [ 0 ]
  zZoneActive          : [ true ]
  zZoneMinLiveTime     : [ 0.0 ]
}

CombineStrawHits : {
  module_type : CombineStrawHits
}

#------------------------------------------------------------------------------
# Form DCHHits turning off some cells (DcH).
# 2015-01-22 P.Murat: is this module obsolete ?
#------------------------------------------------------------------------------
makeDcHWTOff : {
  module_type          : MakeCellsWithTurningOff
  g4ModuleLabel        : g4run
  diagLevel            : 1
  maxFullPrint         : 0
  minimumEnergy        : 0.00004
  makerModuleLabel     : makeDcH
}

#------------------------------------------------------------------------------
# This belongs to digitization, not reco hit making

CommonDigiSim: {
    producers: {
	protonTimeMap: { module_type : GenerateProtonTimes }
	muonTimeMap: { module_type : GenerateMuonLife }
    }

    DigiSim: [ protonTimeMap, muonTimeMap ]
}

#------------------------------------------------------------------------------

END_PROLOG
