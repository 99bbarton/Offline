    'art_Framework_Services_Optional',
    'art_Persistency_Provenance',
    'canvas_Persistency_Provenance',
    'art_Persistency_Common',
    'canvas_Persistency_Common',
    'art_Utilities',
    'canvas_Utilities',
    'fhiclcpp',
    'cetlib',
    rootlibs,
    'CLHEP',
    'HepPDT',
    'xerces-c',
    'boost_system',
    ] )

# Fixme: split into link lists for each module.
helper.make_plugins( [
   mainlib,
   'mu2e_GeometryService',
   'mu2e_BFieldGeom',
