   'art_Persistency_Provenance',
   'canvas_Persistency_Provenance',
   'art_Utilities',
   'canvas_Utilities',
   'MF_MessageLogger',
   'fhiclcpp',
   'cetlib',
   'CLHEP',
   'HepPDT',
   rootlibs,
   'xerces-c',
   'boost_filesystem',
   'boost_system',
    ] )

